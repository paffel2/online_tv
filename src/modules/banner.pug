append style
    link(href=require('Styles/container.scss') rel='stylesheet')

append style
    link(href=require('Styles/banner.scss') rel='stylesheet')

section.section_banner
    img(src=require('Images/banner.png')).section_banner_image
    .container 
        .banner
            h1.banner_title Zack Snyder's Justice League
                .banner-info
                    span.banner-info_year 2021
                    span.banner-info_age 18+
                    span.banner-info_time 4h 21min
                    span.banner-info_rating 8.8
            p.banner_text 
            | Determined to ensure Superman's ultimate sacrifice was not in vain, 
            | Bruce Wayne aligns forces with Diana Prince with plans to recruit a team of metahumans 
            | to protect the world from an approaching threat of catastrophic proportions.
            .banner-control
                button.banner-control_btn.banner-control_btn-watch Watch
                button.banner-control_btn.banner-control_btn-information More information
        
